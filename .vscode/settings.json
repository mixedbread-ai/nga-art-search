{
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.experimental.configFile": {
    "apps/admin/styles/globals.css": "apps/admin/**",
    "apps/app/styles/globals.css": "apps/app/**",
    "apps/web/src/styles/globals.css": "apps/web/**",
    "apps/crust/src/styles/globals.css": "apps/crust/**",
    "packages/typescript/ui/styles/globals.css": "packages/**"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "prettier.enable": false,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  }
}
